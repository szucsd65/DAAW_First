doctype html
html(lang='en')
  head
    title CityEquip Login
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    style
      | body { 
      |   background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
      |   min-height: 100vh; 
      | }
      | .login-container { 
      |   background: white; 
      |   border-radius: 20px; 
      |   box-shadow: 0 20px 40px rgba(0,0,0,0.1); 
      | }

  body.d-flex.align-items-center.justify-content-center
    .login-container.p-5.col-md-6
      .text-center.mb-4
        h1.display-4.text-primary CityEquip

      if error
        .alert.alert-danger= error

      form(method='POST' action='/login')
        .mb-4
          label.form-label(for='email') Email
          input#email.form-control(type='email', name='email', placeholder='admin@cityequip.com', required)

        .mb-4
          label.form-label(for='password') Password
          input#password.form-control(type='password', name='password', placeholder='admin123', required)

        button.btn.btn-primary.btn-lg.w-100(type='submit') Login

        hr

        .text-center
          a.btn.btn-outline-secondary.btn-lg.w-100(href='/register') Register
